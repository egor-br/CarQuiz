<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id = "@+id/dialof_fon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/back_okno"
    android:layout_gravity = "center"
    android:scaleType = "centerCrop"
    android:layout_margin="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id = "@+id/btnclose"
            android:text="&#60;"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/button_menu_start"
            android:layout_gravity="start"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id = "@+id/prewiewimg"
            android:src = "@drawable/level1"
            android:layout_weight="60"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/description"
            android:text="@string/level_text"
            android:layout_weight="30"
            android:textColor="@color/black95"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id = "@+id/btn_continue"
            android:layout_weight="10"
            android:text="@string/text_cont"
            android:textColor="@color/black95"
            android:background="@drawable/button_menu_start"
            android:padding="8dp"
            android:textSize="18sp"
            />


       </LinearLayout>


</LinearLayout>